<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#656565"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/noteBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/app_names"
                app:srcCompat="@drawable/baseline_note_add_24"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/songBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_song1"
                android:contentDescription="@string/app_names"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:layout_marginStart="6dp"
            android:id="@+id/deleteBtn"
            android:clickable="false"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_names"
            app:srcCompat="@drawable/ic_delete_disabled"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/recordBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_record"
                android:contentDescription="@string/app_names"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/recordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Record"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                tools:ignore="HardcodedText,SmallSp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/listBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_names"
            app:srcCompat="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/doneBtn"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_done"/>

        <TextView
            android:id="@+id/timerView"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:textColor="#FFFFFF"
            android:text="00:00.0"/>

        <sound.recorder.widget.tools.RecorderWaveformView
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <ImageView
            android:id="@+id/settingBtn"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_settings_24"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
